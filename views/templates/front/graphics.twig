<script>
const data = {
	labels: [{% autoescape %}{{ dateFormat|raw }}{% endautoescape %}],
	datasets: [{
		label: 'Peso',
		backgroundColor: 'rgba(255, 99, 132,0.5)',
		borderColor: 'rgba(255, 99, 132,0.5)',
		data: [{{ weightFormat }}],
		fill: true,
	}]
};

const config = {
	type: 'line',
	data: data,
	options: {}
};

const LineData = new Chart(
	document.getElementById('LineData'),
	config
);

//Bar
